<UserControl x:Class="Employee_And_Company_Management.Views.Controls.Admin.EmployeeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="1" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Margin="0,10,10,10"
                     Padding="5">
                <TextBox.Resources>
                    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource InputStyle}">
                        <Style.Triggers>
                            <Trigger Property="Text" Value="">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                            <VisualBrush.Visual>
                                                <TextBlock Text="{DynamicResource SearchEmployees}" Foreground="Gray"/>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Resources>
            </TextBox>
            <TextBlock Grid.Column="0" 
                       Text="🔍" 
                       FontSize="20" 
                       VerticalAlignment="Center" 
                       Margin="5,0,5,0" 
                       Opacity="0.5"/>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right">

                <Button Style="{StaticResource ButtonStyle}" Margin="0" Command="{Binding AddEmployeeCommand}">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="Add" Width="24" Height="24" Margin="0,0,10,0"/>
                            <TextBlock Text="{DynamicResource AddEmployee}"/>
                        </StackPanel>
                    </Button.Content>
                </Button>
            </StackPanel>
        </Grid>

        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource ActiveEmployees}">
                <ContentControl>
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <DataGrid ItemsSource="{Binding ActiveEmployees}" AutoGenerateColumns="False" CanUserAddRows="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="{DynamicResource FirstName}" Binding="{Binding PersonProfile.FirstName}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="{DynamicResource LastName}" Binding="{Binding PersonProfile.LastName}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="{DynamicResource Username}" Binding="{Binding PersonProfile.Profile.Username}" IsReadOnly="True"/>
                                            <DataGridTemplateColumn Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Background="Transparent" HorizontalAlignment="Right" >
                                                            <Button Command="{Binding DataContext.BlockCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                CommandParameter="{Binding}" 
                                                                Style="{StaticResource ButtonStyle}" 
                                                                Margin="0,0,10,0" 
                                                                Height="30">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                        <materialDesign:PackIcon Kind="Block" Width="24" Height="24" Margin="0,0,10,0"/>
                                                                        <TextBlock Text="{DynamicResource Block}"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>

                                                            <Button Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                 CommandParameter="{Binding}" 
                                                                 Style="{StaticResource ButtonStyle}" 
                                                                 Margin="0,0,10,0" 
                                                                 Height="30">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                        <materialDesign:PackIcon Kind="Show" Width="24" Height="24" Margin="0,0,10,0"/>
                                                                        <TextBlock Text="{DynamicResource Details}"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>

                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ActiveEmployees.Count}" Value="0">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <TextBlock Text="{DynamicResource NoData}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="20" FontStyle="Italic"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </TabItem>
            <TabItem Header="{DynamicResource BlockedEmployees}">
                <ContentControl>
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <DataGrid ItemsSource="{Binding BlockedEmployees}" AutoGenerateColumns="False" CanUserAddRows="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="{DynamicResource FirstName}" Binding="{Binding PersonProfile.FirstName}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="{DynamicResource LastName}" Binding="{Binding PersonProfile.LastName}"  IsReadOnly="True"/>
                                            <DataGridTextColumn Header="{DynamicResource Username}" Binding="{Binding PersonProfile.Profile.Username}" IsReadOnly="True" />
                                            <DataGridTemplateColumn Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <Button Command="{Binding DataContext.ActiveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                                 CommandParameter="{Binding}" 
                                                                 Style="{StaticResource ButtonStyle}" 
                                                                 Margin="0,0,10,0" 
                                                                 Height="30">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                        <materialDesign:PackIcon Kind="Check" Width="24" Height="24" Margin="0,0,10,0"/>
                                                                        <TextBlock Text="{DynamicResource Active}"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>


                                                            <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}" Style="{StaticResource ButtonStyle}" Margin="0,0,10,0" Height="30">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                        <materialDesign:PackIcon Kind="Delete" Width="24" Height="24" Margin="0,0,10,0"/>
                                                                        <TextBlock Text="{DynamicResource Delete}"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding BlockedEmployees.Count}" Value="0">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <TextBlock Text="{DynamicResource NoData}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="20" FontStyle="Italic"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </TabItem>
            <TabItem Header="{DynamicResource DeletedEmployees}">
                <ContentControl>
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <DataGrid ItemsSource="{Binding DeletedEmployees}" AutoGenerateColumns="False" CanUserAddRows="False">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="{DynamicResource FirstName}" Binding="{Binding PersonProfile.FirstName}" IsReadOnly="True"/>
                                            <DataGridTextColumn Header="{DynamicResource LastName}" Binding="{Binding PersonProfile.LastName}" IsReadOnly="True" />
                                            <DataGridTextColumn Header="{DynamicResource Username}" Binding="{Binding PersonProfile.Profile.Username}" IsReadOnly="True" />
                                            <DataGridTemplateColumn Width="*">
                                                <DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Orientation="Horizontal" Background="Transparent" HorizontalAlignment="Right" >
                                                            <Button Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                    CommandParameter="{Binding}" Style="{StaticResource ButtonStyle}" Margin="0,0,10,0" Height="30">
                                                                <Button.Content>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                                        <materialDesign:PackIcon Kind="Show" Width="24" Height="24" Margin="0,0,10,0"/>
                                                                        <TextBlock Text="{DynamicResource Details}"/>
                                                                    </StackPanel>
                                                                </Button.Content>
                                                            </Button>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </DataGridTemplateColumn.CellTemplate>
                                            </DataGridTemplateColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding DeletedEmployees.Count}" Value="0">
                                    <Setter Property="Content">
                                        <Setter.Value>
                                            <TextBlock Text="{DynamicResource NoData}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" Margin="20" FontStyle="Italic"/>

                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>