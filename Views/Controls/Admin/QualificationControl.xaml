<UserControl x:Class="Employee_And_Company_Management.Views.Controls.Admin.QualificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Employee_And_Company_Management.Views.Controls.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

                    <TextBox Grid.Column="1" 
          Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
          Margin="0,10,10,10"
          Padding="5">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource InputStyle}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="{DynamicResource SearchQualifications}" Foreground="Gray" Padding="5"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock Grid.Column="0" 
            Text="🔍" 
            FontSize="20" 
            VerticalAlignment="Center" 
            Margin="5,0,5,0" 
            Opacity="0.5"/>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right">
                    <Button Content="{DynamicResource AddQualification}" 
                     Command="{Binding AddQualificationCommand}" 
                     Style="{StaticResource ButtonStyle}" Margin="0" />
            </StackPanel>

        </Grid>

        <TabControl Grid.Row="1">
            <TabItem Header="{DynamicResource Qualification}">
                <DataGrid ItemsSource="{Binding Qualifications}" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="{DynamicResource Name}" Binding="{Binding Title}" IsReadOnly="True"/>
                        <DataGridTextColumn Header="{DynamicResource QualificationCode}" Binding="{Binding QualificationCode}" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
