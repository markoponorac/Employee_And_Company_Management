<Page x:Class="Employee_And_Company_Management.Views.Pages.AdministratorSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:controls="clr-namespace:Employee_And_Company_Management.Views.Controls"
      mc:Ignorable="d"
      Title="Administrator Settings">
    <Grid Margin="10">
        <TabControl>
            <!-- General Settings Tab -->
            <TabItem Header="General Settings">
                <controls:GeneralSettingsControl />
            </TabItem>

            <!-- Administrator Specific Settings Tab -->
            <TabItem Header="Admin Specific Settings">
                <StackPanel Margin="10">
                    <TextBlock Text="Administrator Specific Settings" FontSize="16" FontWeight="Bold"/>
                    <!-- Ovde dodaj specifične postavke za administratora -->
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
