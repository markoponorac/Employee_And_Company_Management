<Window x:Class="Employee_And_Company_Management.Views.Windows.AddNewCompanyeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_And_Company_Management.Views.Windows"
        mc:Ignorable="d"
        Title="{DynamicResource AddCompany}" Height="520" Width="430"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource Username}" Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <TextBox x:Name="UsernameTextBlock" Style="{DynamicResource InputStyle}" Foreground="Black"  Width="200" Text="{Binding Username}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource Name}" Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <TextBox x:Name="FirstNameTextBlock" Style="{DynamicResource InputStyle}" Foreground="Black" Width="200" Text="{Binding Name}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource DateOfEstablish}" Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <DatePicker x:Name="DateOfEstablishmentPicker" Style="{DynamicResource InputStyle}" Foreground="Black" Width="200" SelectedDate="{Binding DateOfEstablish}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource Jib}" Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <TextBox x:Name="JmbTextBlock" Style="{DynamicResource InputStyle}" Foreground="Black" Width="200" Text="{Binding Jib}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource Address}" Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <TextBox x:Name="AddresTextBlock" Style="{DynamicResource InputStyle}" Foreground="Black" Width="200" Text="{Binding Address}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource Password}" Style="{DynamicResource ParameterTextSyle}" Width="145"/>
                <PasswordBox x:Name="UserPasswordBox" Style="{StaticResource CustomPasswordBoxStyle}" Foreground="Black" Width="200" PasswordChanged="UserPasswordBox_PasswordChanged" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource ConfirmPassword}" Style="{DynamicResource ParameterTextSyle}" Width="145"/>
                <PasswordBox x:Name="UserAgainPasswordBox" Style="{StaticResource CustomPasswordBoxStyle}" Foreground="Black" Width="200" PasswordChanged="UserAgainPasswordBox_PasswordChanged" />
            </StackPanel>
            <Button Content="{DynamicResource Save}" Style="{StaticResource SubbmitButton}" Command="{Binding SaveCommand}" />
        </StackPanel>
    </Grid>
</Window>
