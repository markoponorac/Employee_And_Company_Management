<Window x:Class="Employee_And_Company_Management.Views.Windows.AddNewEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
xmlns:sys="clr-namespace:System;assembly=mscorlib"

        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="{DynamicResource AddEmployee}" Height="580" Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Border  Background="{DynamicResource BackgroundBrush}" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <md:PackIcon Kind="AccountCircle" Width="24" Height="24" Margin="5" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="UsernameTextBox"
              Grid.Row="0" Grid.Column="1"
              materialDesign:HintAssist.Hint="{DynamicResource Username}"
              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              IsReadOnly="False"
              Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
              Margin="0,10"/>


            <md:PackIcon Kind="AccountBox" Width="24" Height="24" Margin="5" Grid.Row="1" VerticalAlignment="Center"/>
            <TextBox x:Name="FirstNameTextBox"
              Grid.Row="1" Grid.Column="1"
              materialDesign:HintAssist.Hint="{DynamicResource FirstName}"
              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              IsReadOnly="False"
              Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
              Margin="0,10"/>


            <md:PackIcon Kind="AccountBox" Width="24" Height="24" Margin="5" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox x:Name="LastNameTextBox"
              Grid.Row="2" Grid.Column="1"
              materialDesign:HintAssist.Hint="{DynamicResource LastName}"
              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              IsReadOnly="False"
              Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"
              Margin="0,10"/>

            <md:PackIcon Kind="Calendar" Width="24" Height="24" Margin="5" Grid.Row="3" VerticalAlignment="Center" />
            <DatePicker x:Name="DateOfBirthPicker" DisplayDateEnd="{x:Static sys:DateTime.Now}" 
         Grid.Row="3" Grid.Column="1"
         materialDesign:HintAssist.Hint="{DynamicResource DateOfBirth}"
         SelectedDate="{Binding DateOfBirth, UpdateSourceTrigger=PropertyChanged}"
                 Background="{DynamicResource BackgroundBrush}"
         Margin="0,10">
                <DatePicker.Resources>
                    <Style TargetType="DatePickerTextBox">
                        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                    <Style TargetType="Calendar">
                        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
                        <Setter Property="Foreground" Value="Black" />
                    </Style>
                </DatePicker.Resources>
            </DatePicker>
            
            <md:PackIcon Kind="CardAccountDetails" Width="24" Height="24" Margin="5" Grid.Row="4" VerticalAlignment="Center"/>
            <TextBox x:Name="JmbTextBox"
              Grid.Row="4" Grid.Column="1"
              materialDesign:HintAssist.Hint="{DynamicResource Jmb}"
              Style="{StaticResource MaterialDesignFloatingHintTextBox}"
              IsReadOnly="False"
              Text="{Binding Jmb, UpdateSourceTrigger=PropertyChanged}"
              Margin="0,10"/>
            
            <md:PackIcon Kind="Briefcase" Width="24" Height="24" Margin="5" Grid.Row="5" VerticalAlignment="Center"/>
            <ComboBox x:Name="QualificationComboBox"
       Grid.Row="5" Grid.Column="1"
       materialDesign:HintAssist.Hint="{DynamicResource Qualification}"
       Style="{StaticResource MaterialDesignFloatingHintComboBox}"
       Foreground="Black"
       ItemsSource="{Binding Qualifications}"
       SelectedValue="{Binding SelectedQualificationId}"
       SelectedValuePath="Id"
       DisplayMemberPath="Title"
       Margin="0,10"/>
            
            <md:PackIcon Kind="Lock" Width="24" Height="24" Margin="5" Grid.Row="6" VerticalAlignment="Center" />
            <PasswordBox x:Name="UserPasswordBox"
          Grid.Row="6" Grid.Column="1"
          materialDesign:HintAssist.Hint="{DynamicResource Password}"
          Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
          Foreground="Black"
          PasswordChanged="UserPasswordBox_PasswordChanged"
          Margin="0,10"/>

            <md:PackIcon Kind="LockCheck" Width="24" Height="24" Margin="5" Grid.Row="7" VerticalAlignment="Center" />
            <PasswordBox x:Name="UserAgainPasswordBox"
          Grid.Row="7" Grid.Column="1"
          materialDesign:HintAssist.Hint="{DynamicResource ConfirmPassword}"
          Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
          Foreground="Black"
          PasswordChanged="UserAgainPasswordBox_PasswordChanged"
          Margin="0,10"/>


            <Button Command="{Binding SaveCommand}"  
        Style="{StaticResource SubbmitButton}" 
        Margin="0,30,10,0" 
        Grid.Row="8" 
        Grid.Column="1">
                <Button.Content>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="ContentSaveOutline" Width="24" Height="24" Margin="0,0,10,0"/>
                        <TextBlock Text="{DynamicResource Save}"/>
                    </StackPanel>
                </Button.Content>
            </Button>



        </Grid>
    </Border>
</Window>
