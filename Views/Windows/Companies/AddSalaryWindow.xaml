<Window x:Class="Employee_And_Company_Management.Views.Windows.Companies.AddSalaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employee_And_Company_Management.Views.Windows.Companies"
        mc:Ignorable="d"
        Title="{DynamicResource AddNewSalary}" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Background="{DynamicResource BackgroundBrush}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="{DynamicResource Month}" 
                   Grid.Row="0" Grid.Column="0"
                   Margin="0,0,10,10"/>
        <ComboBox Grid.Row="0" Grid.Column="1"
                  ItemsSource="{Binding Months}"
                  SelectedItem="{Binding SelectedMonth}"
                  Style="{StaticResource InputStyle}"
                  Margin="0,0,0,10"/>

        <TextBlock Text="{DynamicResource Year}" 
                   Grid.Row="1" Grid.Column="0"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputStyle}"
                 Margin="0,0,0,10"/>

        <TextBlock Text="{DynamicResource SalaryAmount}" 
                   Grid.Row="2" Grid.Column="0"
                   Margin="0,0,10,10"/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                 Style="{StaticResource InputStyle}"
                 Margin="0,0,0,10"/>

        <TextBlock Text="{DynamicResource PaymentDate}" 
                   Grid.Row="3" Grid.Column="0"
                   Margin="0,0,10,10"/>
        <DatePicker Grid.Row="3" Grid.Column="1"
                    SelectedDate="{Binding PaymentDate}"
                    Style="{StaticResource InputStyle}"
                    Margin="0,0,0,10"/>

        <Button Content="{DynamicResource Save}"
                Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
                Command="{Binding SaveNewSalaryCommand}"
                Style="{StaticResource ButtonStyle}"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Padding="20,10"/>
    </Grid>
</Window>