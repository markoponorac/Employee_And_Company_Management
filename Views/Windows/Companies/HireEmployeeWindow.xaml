<Window x:Class="Employee_And_Company_Management.Views.Windows.Companies.HireEmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource AddEmployee}" Height="400" Width="450"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Background="{DynamicResource BackgroundBrush}">
        <StackPanel Margin="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource SelectDepartment}" 
                           Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <ComboBox ItemsSource="{Binding Departments}"
                          SelectedItem="{Binding SelectedDepartment}"
                          DisplayMemberPath="Name"
                          Style="{DynamicResource InputStyle}" 
                          Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource WorkPlace}" 
                           Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <ComboBox ItemsSource="{Binding WorkPlaces}"
                          SelectedItem="{Binding SelectedWorkPlace}"
                          DisplayMemberPath="Title"
                          Style="{DynamicResource InputStyle}" 
                          Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource HireDate}" 
                           Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <DatePicker SelectedDate="{Binding HireDate}"
                            DisplayDateStart="{Binding TodayDate}"
                            Style="{DynamicResource InputStyle}" 
                            Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource HourlyRate}" 
                           Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <TextBox Text="{Binding HourlyRate}" 
                         Style="{DynamicResource InputStyle}" 
                         Foreground="Black" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{DynamicResource VacationDays}" 
                           Style="{DynamicResource ParameterTextSyle}" Width="150"/>
                <TextBox Text="{Binding VacationDays}" 
                         Style="{DynamicResource InputStyle}" 
                         Foreground="Black" Width="200"/>
            </StackPanel>
            <Button Content="{DynamicResource Save}" 
                    Style="{StaticResource SubbmitButton}" 
                    Command="{Binding ConfirmHireCommand}" 
                    HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Window>
